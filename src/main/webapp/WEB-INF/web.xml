<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>fr.usmb.nerah.servlet.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>more_info</servlet-name>
        <servlet-class>fr.usmb.nerah.servlet.MoreInfoColisServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>edit_colis</servlet-name>
        <servlet-class>fr.usmb.nerah.servlet.EditColisServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>add_colis</servlet-name>
        <servlet-class>fr.usmb.nerah.servlet.AddColisServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>move_colis</servlet-name>
        <servlet-class>fr.usmb.nerah.servlet.NewPositionColisServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>update_position</servlet-name>
        <servlet-class>fr.usmb.nerah.servlet.UpdatePositionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>more_info</servlet-name>
        <url-pattern>/more_info</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>edit_colis</servlet-name>
        <url-pattern>/edit_colis</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>add_colis</servlet-name>
        <url-pattern>/add_colis</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>move_colis</servlet-name>
        <url-pattern>/move_colis</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>update_position</servlet-name>
        <url-pattern>/update_position</url-pattern>
    </servlet-mapping>

</web-app>